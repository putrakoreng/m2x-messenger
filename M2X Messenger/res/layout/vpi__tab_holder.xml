<view xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/vpiTabPageIndicatorStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    class="com.viewpagerindicator.TabPageIndicator$TabView" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_marginLeft="2dp"
            android:id="@+id/imgBulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/presence_online"
            android:visibility="visible" />

        <com.sir_m2x.messenger.widgets.ClickableHorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <TextView
                android:id="@+id/txtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="sir_m2x" />
        </com.sir_m2x.messenger.widgets.ClickableHorizontalScrollView>

        <ImageView
            android:layout_marginLeft="2dp"
            android:id="@+id/imgIsTyping"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/pencopy"
            android:visibility="visible" />

        <ImageView
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/imgUnreadIm"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/envelope"
            android:visibility="visible" />
    </LinearLayout>

</view>