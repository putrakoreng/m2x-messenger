<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:paddingBottom="3dp" android:paddingTop="3dp">

    <ImageView
        android:layout_width="wrap_content"
        android:src="@drawable/list_arrow_right" android:layout_marginLeft="7dp" android:id="@+id/imgIndicator" android:layout_height="32dp"/>

    <TextView
        android:id="@+id/txtGroupName"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="left|center"
        android:text="Group name"
        android:layout_marginLeft="2dp" android:textColor="#454545"/>
    
    <View android:layout_width="0dp" android:layout_height="0.5dp" android:layout_weight="1"
        android:background="#c2c4c6" android:layout_marginLeft="5dp" android:layout_marginRight="4dp" android:layout_marginTop="17dp"/>

    <!-- <TextView -->
    <!-- android:id="@+id/txtNewImCount" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="50dp" -->
    <!-- android:layout_marginRight="2dp" -->
    <!-- android:gravity="center_vertical|center_horizontal|center" -->
    <!-- android:text="5" -->
    <!-- android:visibility="visible" /> -->

    <ImageView
        android:id="@+id/imgEnvelope"
        android:layout_width="16dp"
        android:layout_height="34dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/envelope"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtGroupCount"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="5/10"
        android:textColor="#454545"/>

</LinearLayout>